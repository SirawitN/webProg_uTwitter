%h1 Listing posts

%table.table.table-striped.table-hover#postsTable
  %thead
    %tr.table-info
      %th User
      %th Msg
      %th
      %th
      %th

  %tbody
    - @posts.each do |post|
      %tr
        %td.w-25= post.user.name
        %td.w-50= post.msg
        %td= button_to 'Show', post, class: "btn btn-outline-secondary"
        %td= button_to 'Edit', edit_post_path(post), class: "btn btn-outline-secondary"
        %td= button_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-secondary"

%br

= link_to 'New Post', new_post_path

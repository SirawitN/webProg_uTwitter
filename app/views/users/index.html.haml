%h1 Listing users

- flash.each do |type, msg|
  %div.alert.alert-warning.alert-dismissible.fade.show
    %p= msg
    %button.btn-close{"aria-label" => "Close", "data-bs-dismiss" => "alert", :type => "button"}

%table.table.table-striped.table-hover
  %thead
    %tr.table-primary
      %th Name
      %th Email
      %th Password digest
      %th
      %th
      %th

  %tbody
    - @users.each do |user|
      %tr
        %td= user.name
        %td= user.email
        %td= user.password_digest
        %td= button_to 'Show', profile_path(user.name), method: :get, class: "btn btn-outline-secondary"
        %td= button_to 'Edit', edit_user_path(user), method: :get, class: "btn btn-outline-secondary"
        %td= button_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-secondary"

%br

= button_to 'New User', new_user_path, class: "btn btn-info"
